.list_items
	each work in works
		.list_item
			a.item_rm.work(href='#', id=work._id) -- удалить
			a.item_title(href='/admin/works/edit/' + work._id, class=work.status)= (work.i18n.title.get('ru') || '!!! ПУСТОЕ ПОЛЕ !!!')
			span= ' | '
			span.item_images= work.images.length
			if work.images.some(function(image) { return image.main == true })
				span= ' + '
				span.item_poster= 'p'
			span.item_preview
				span= ' --> '
				a(href='/' + (work.type == 'project' ? 'projects' : 'research') + '/' + (work.sym ? work.sym : work._short_id), target='_blank') превью

.list_counter
	a.list_back(href='#'): b назад
	span= ' - '
	select.list_select
		- var i = 0;
		while i < count
			option(value=i selected= (i == skip / 10) )= i+1
			- i++
	span= ' - '
	a.list_next(href='#'): b вперед