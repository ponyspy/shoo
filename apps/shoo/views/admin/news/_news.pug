.list_items
	each news_item in news
		.list_item
			a.item_rm.news_item(href='#', id=news_item._id) -- удалить
			a.item_title(href='/admin/news/edit/' + news_item._id, class=news_item.status =='hidden' ? 'hidden': '')= (news_item.i18n.title.get('ru') || '!!! ПУСТОЕ ПОЛЕ !!!')

.list_counter
	a.list_back(href='#'): b назад
	span= ' - '
	select.list_select
		- var i = 0;
		while i < count
			option(value=i selected= (i == skip / 10) )= i+1
			- i++
	span= ' - '
	a.list_next(href='#'): b вперед