.content_block
	width 100%
	max-width 1640px
	margin 0 auto
	padding 20px
	box-sizing border-box

.projects_block
	margin-bottom 120px
	.project_item
		display flex
		border-bottom 1px solid black
		padding-top 20px
		padding-bottom 10px
		color black
		text-decoration none
		.project_type
			padding-right 20px
			flex-basis 25%
			&:after
				content ':'
		.project_title
			padding-left 20px
			padding-right 20px
			flex-basis 25%
		.project_build
			padding-left 20px
			padding-right 20px
			flex-basis 25%
		.project_category
			padding-left 20px
			flex-basis 25%

