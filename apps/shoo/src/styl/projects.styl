@media screen and (max-width: 1200px)
	@import 'mobile/_projects.styl'


.content_block
	width 100%
	max-width 1640px
	margin 0 auto
	padding 20px
	padding-top 80px!important
	box-sizing border-box

.projects_block
	margin-bottom 120px
	width 100%
	border-collapse collapse
	.project_item
		border-bottom 1px solid black
		color black
		text-decoration none
		display flex
		&:hover .project_title
			text-decoration underline
		.column_item
			padding-top 20px
			padding-bottom 10px
			display flex
			width 50%
			&.one
				width 40%
			&.two
				width 60%
			.project_type
				// background-color #51c5c9
				width 50%
				padding-right 20px
				&:after
					content ':'
			.project_category
				// background-color green
				width 30%
				padding-left 20px
			.project_build
				// background-color #921d70
				margin-left 15%
				padding-left 20px
				padding-right 20px
			.project_title
				width 50%
				// background-color #e74725
				padding-left 20px
				padding-right 20px

