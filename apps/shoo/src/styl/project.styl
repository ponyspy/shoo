.content_block
	width 100%
	max-width 1640px
	margin 0 auto
	padding 20px
	box-sizing border-box

.project_header
	display flex
	font-size 28pt
	line-height 32pt
	margin-bottom 20px
	.project_title
		// background-color red
		flex-basis 40%
	.project_build
		// background-color green
		flex-basis 10%
	.project_category
		// background-color grey
		flex-basis 20%
		margin-left auto


.project_poster
	width 100%
	padding-top 60%
	background-size cover
	background-position center
	background-repeat no-repeat


.project_body
	display flex
	padding-top 40px
	padding-bottom 40px
	.project_description
		// background-color red
		flex-basis 60%
		padding-right 180px
		text-indent 60px
	.project_columns
		// background-color green
		flex-basis 40%
		display flex
		.column_item
			flex-basis 50%
			.column
				&.title
					&:after
						content ':'
// 				&.body
				.line_item
					margin-top 20px
					.line_title
						&:after
							content ':'
					// .line_body


.project_gallery
	margin-left -10px
	margin-right -10px
	.image_item
		display inline-block
		margin-right -4px
		font-size 0
		margin-bottom 20px
		padding-left 10px
		padding-right 10px
		box-sizing border-box
		.image
			width 100%
			padding-top 60%
			background-size cover
			background-position center
			background-repeat no-repeat
		.image_description
			font-size 14pt
			margin-top 10px
		&.size_0x
			max-width 0px
			.image
				height 0px
				min-height 0px
		&.size_0x
			display none
		&.size_1x
			width 50%
		&.size_2x
			width 100%

	.slider_block
		display inline-block
		margin-right -4px
		font-size 0
		padding-left 10px
		padding-right 10px
		box-sizing border-box
		margin-bottom 20px
		position relative
		.swiper-arrows
			width 100%
			height 0
			position absolute
			top 0
			left 0
			z-index 999
			opacity 0
			.arrow-left
			.arrow-right
				outline none
				background-size contain
				background-position center
				background-repeat no-repeat
				width 60px
				height 60px
				position absolute
				margin-top 26%
			.arrow-left
				left 30px
				background-image url('/stuff/shoo/icons/arrow_left.svg')
			.arrow-right
				right 30px
				background-image url('/stuff/shoo/icons/arrow_right.svg')
		&:hover .swiper-arrows
			opacity 1
		&.g_0x
			display none
		&.g_1x
			width 50%
		&.g_2x
			width 100%
		.swiper-container
			width 100%
			.swiper-slide
				width 100%
				.slide_image
					width 100%
					padding-top 60%
					background-size cover
					background-position center
					background-repeat no-repeat
				.slide_body
					font-size 14pt
					margin-top 10px
					display flex
					justify-content space-between
					.slide_description
						flex-basis 70%


.project_sim
	margin-top 120px
	margin-bottom 120px
	.sim_title
		font-size 28pt
		line-height 30pt
	.sim_projects
		margin-left -10px
		margin-right -10px

