@media screen and (max-width: 1200px)
	@import 'mobile/_main.styl'


.projects_slider
	width 100%
	.slider_block
		width 100%
		margin-bottom 10px
		.swiper-arrows
			width 100%
			height 0
			position absolute
			top 0
			left 0
			z-index 999
			opacity 0
			.arrow-left
			.arrow-right
				outline none
				background-size contain
				background-position center
				background-repeat no-repeat
				width 90px
				height 90px
				margin-top 24%
				position absolute
				cursor pointer
				background-size 60%
			.arrow-left
				left 30px
				background-image url('/stuff/shoo/icons/arrow_left.svg')
			.arrow-right
				right 30px
				background-image url('/stuff/shoo/icons/arrow_right.svg')
		&:hover .swiper-arrows
			opacity 1
		.slide_item
			width 100%
			color black
			text-decoration none
			.slide_image
				width 100%
				padding-top 60%
				display block
				background-size cover
				background-position center
				background-repeat no-repeat
			.slide_columns
				margin-top 10px
				display flex
				justify-content space-between
				.column_item
					display flex
					&.left
						flex-direction column
						flex-basis 30%
						// background-color red
					&.right
						flex-basis 55%
						flex-direction row
						// background-color green
					&.counter
						flex-basis 15%
						flex-direction row
					.project_type
						// background-color rgb(48, 154, 106)
						padding-right 40px
						&:after
							content ':'
					.project_build
						// background-color rgb(231, 71, 37)
						padding-right 40px
					.project_title
						// background-color rgb(249, 177, 11)
						flex-grow 1
						padding-right 20px
					.project_category
						// background-color rgb(224, 33, 37)
						padding-right 20px
					.project_counter
						margin-left auto
						// background-color rgb(249, 177, 11)
						// padding-left 80px


.projects_columns
	margin-left -10px
	margin-right -10px
	margin-bottom 120px

