.projects_block
	width 100%
	max-width 1920px
	margin 0 auto
	.project_item
		width 50%
		display inline-block
		vertical-align top
		text-decoration none
		color black
		padding 10px
		box-sizing border-box
		margin-bottom 40px
		.project_poster
			width 100%
			padding-top 60%
			background-size cover
			background-pocition center
			background-repeat no-repeat
		.project_columns
			margin-top 10px
			display flex
			.column_item
				display flex
				&.left
					flex-grow 1
					flex-direction column
				&.right
					flex-grow 4
					flex-direction row
				.project_type
