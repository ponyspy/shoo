@import '_fonts.styl'
@media screen and (max-width: 680px)
	@import 'mobile/_global.styl'

html, body
	margin 0
	padding 0
	font-smoothing: antialiased;
	-moz-osx-font-smoothing: grayscale;
	font-family Suisse-Book
	font-size 14pt
	line-height 16pt

.title_block
	display flex
	justify-content space-between
	align-items flex-start
	padding 20px
	.logo img
		height 60px
	.type_item
		position relative
		.type_main
			z-index 999
			position relative
			&.active
				color black
		&:hover .type_categorys
			display block
		a
			font-size 28pt
			text-decoration none
			color transparent
			-webkit-text-stroke-width 1px
			-webkit-text-stroke-color black
			&:hover
				color black
		.type_categorys
			display none
			position absolute
			left 0
			top 0
			padding-top 32pt
			width 100%
			a
				display block
	.menu_drop
		width 25px
		height 25px
		transform rotate(0deg)
		transition .5s ease-in-out
		cursor pointer
		span
			display block
			position absolute
			height 4px
			width 100%
			background black
			opacity 1
			left 0
			transform rotate(0deg)
			transition .25s ease-in-out
		span:nth-child(1)
			top 0px
		span:nth-child(2)
		span:nth-child(3)
			top 10px
		span:nth-child(4)
			top 20px
		&.menu_open
			span:nth-child(1)
				top 10px
				width 0%
				left 50%
			span:nth-child(2)
				transform rotate(45deg)
			span:nth-child(3)
				transform rotate(-45deg)
			span:nth-child(4)
				top 10px
				width 0%
				left 50%

.menu_block
	display none
