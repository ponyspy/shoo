@import '_fonts.styl'
@media screen and (max-width: 1200px)
	@import 'mobile/_global.styl'

html, body
	margin 0
	padding 0
	// font-smoothing: antialiased;
	// -moz-osx-font-smoothing: grayscale;
	font-family Suisse-Book
	font-size 14pt
	line-height 18pt
	a
		color black
		&:hover
			text-decoration none
	&.menu_open
		height 100%
		overflow hidden


.title_block
	display flex
	justify-content space-between
	align-items flex-start
	padding 20px
	padding-bottom 15px
	box-sizing border-box
	.logo img
		height 60px
	.types_block
		width 100%
		display flex
		justify-content space-around
		align-items flex-start
		.type_item
			margin-top -5px
			position relative
			.type_main
				z-index 9999
				position relative
				&.active
					color black
					-webkit-text-stroke-color transparent
			.type_categorys a.active
				color black
				-webkit-text-stroke-color transparent
			&:hover .type_categorys
				display block
			a
				font-size 28pt
				line-height 32pt
				text-decoration none
				color transparent
				-webkit-text-stroke-width 0.7px
				-webkit-text-stroke-color black
				color transparent
				&:hover
					color black
					-webkit-text-stroke-color transparent
			.type_categorys
				z-index 999
				display none
				position absolute
				left 0
				top 0
				padding-top 32pt
				width 100%
				a
					display block
	.menu_drop
		width 30px
		height 30px
		transform rotate(0deg)
		transition .5s ease-in-out
		cursor pointer
		span
			display block
			position absolute
			height 4px
			width 100%
			background black
			opacity 1
			left 0
			transform rotate(0deg)
			transition .25s ease-in-out
		span:nth-child(1)
			top 0px
		span:nth-child(2)
		span:nth-child(3)
			top 10px
		span:nth-child(4)
			top 20px
		&.open
			span
				background white
			span:nth-child(1)
				top 10px
				width 0%
				left 50%
			span:nth-child(2)
				transform rotate(45deg)
			span:nth-child(3)
				transform rotate(-45deg)
			span:nth-child(4)
				top 10px
				width 0%
				left 50%

.header_block
	position fixed
	width 100%
	z-index 999999
	background-color white
	.menu_block
		display none
		&.hide
			display none!important
	&.menu_open
		overflow scroll
		position fixed
		background-color black
		height 100%
		top 0; left 0
		.title_block
			background-color black
			.logo
				filter: invert(100%)
			a
				-webkit-text-stroke-color white!important
				&.active
				&:hover
					-webkit-text-stroke-color transparent!important
					color white!important
		.menu_block
			display flex
			width 100%
			flex-direction column
			position relative
			z-index 99
			padding-left 20px
			padding-right 20px
			box-sizing border-box
			.locale_block
			.stargazer_block
				margin-left auto
				display flex
				flex-direction column
			a
				margin-left auto
				font-size 28pt
				line-height 32pt
				text-decoration none
				color black
				-webkit-text-stroke-width 0.7px
				-webkit-text-stroke-color white
				&:hover
				&.active
					color white
					-webkit-text-stroke-color transparent

	.search_block
		display none
		&.show
			display block
		.search_input
			display block
			outline none
			margin 0
			margin-bottom 40px
			padding-left 20px
			padding-right 20px
			color white
			background-color transparent
			width 100%
			border none
			font-size 28pt
			line-height 32pt
			text-decoration none
		.search_results
			max-width 1640px
			margin 0 auto
			padding 10px
			margin-bottom 140px
			.project_item
				color white!important
				border-color black!important

.content_block
	min-height calc(100vh - 136px)
	z-index 0
	position relative
	padding-top 100px!important
	transition .3s linear
	&.hover
		transition .3s linear
		opacity 0.3

.footer_block
	background-color black
	color white
	display flex
	padding 20px
	box-sizing border-box
	width 100%
	font-size 12pt
	a
		color white
	.column
		margin-right 7%
		&.social a
			color white
			text-decoration none
			display block
			&:before
				content 'â†˜'
				padding-right 5px
			span:hover
				text-decoration underline
		&.copy
			margin-right 0
			margin-left auto
			max-width 300px
			display flex
			align-items flex-end
			text-align right


.projects_columns
.sim_projects
.search_results
	.project_item
		width 50%
		display inline-block
		vertical-align top
		text-decoration none
		color black
		border 10px solid white
		box-sizing border-box
		position relative
		.project_images
			width 100%
			padding-top 60%
			position relative
			.project_image
				background-size cover
				background-position center
				background-repeat no-repeat
				position absolute
				top 0; left 0
				width 100%
				height 100%
				visibility hidden
				opacity 0
				transition visibility 0s linear 0.3s, opacity 0.3s linear
				&.active
					visibility visible
					opacity 1
					transition-delay 0s
		.project_columns
			margin-top 10px
			display flex
			.column_item
				display flex
				&.left
					flex-basis 30%
					flex-direction column
				&.right
					flex-basis 70%
					flex-direction row
				.project_type
					// background-color rgb(48, 154, 106)
					padding-right 40px
					&:after
						content ':'
				.project_build
					// background-color rgb(231, 71, 37)
					padding-right 40px
				.project_title
					// background-color rgb(249, 177, 11)
					flex-grow 1
					padding-right 40px
				.project_category
					// background-color rgb(224, 33, 37)
					padding-right 80px

