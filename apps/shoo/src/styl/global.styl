.footer_block
	background-color black
	color white
	display flex
	padding 20px
	box-sizing border-box
	width 100%
	font-size 12pt
	a
		color white
	.column
		margin-right 7%
		&.social a
			color white
			text-decoration none
			display block
			&:before
				content 'â†˜'
				padding-right 5px
			span:hover
				text-decoration underline
		&.copy
			margin-right 0
			margin-left auto
			max-width 300px


.projects_columns
.sim_projects
	.project_item
		width 50%
		display inline-block
		vertical-align top
		text-decoration none
		color black
		border 10px solid white
		box-sizing border-box
		position relative
		.project_poster
			width 100%
			padding-top 60%
			z-index 99999
			position absolute
			background-size cover
			background-position center
			background-repeat no-repeat
			&.hide
				display none
		.project_images
			width 100%
			padding-top 60%
			position relative
			.project_image
				background-size cover
				background-position center
				background-repeat no-repeat
				position absolute
				top 0; left 0
				width 100%
				height 100%
				display none
				&.active
					display block
		.project_columns
			margin-top 10px
			display flex
			.column_item
				display flex
				&.left
					flex-basis 30%
					flex-direction column
				&.right
					flex-basis 70%
					flex-direction row
